{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/app",
		"sourceMap": true,
		"declaration": false,
		"module": "es2015",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"allowJs": true,
		"target": "es2015",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2018",
			"dom"
		],
		"paths": {
			"@app/*": ["src/app/*"],
			"core-js/es7/reflect": ["node_modules/core-js/proposals/reflect-metadata"],
			"core-js/es6/*": ["node_modules/core-js/es/*"]
		}
	},
	"angularCompilerOptions": {
		"strictTemplates": true
	},
	"exclude": [
		"dist",
		"node_modules",
		"platforms",
		"plugins",
	]
}
